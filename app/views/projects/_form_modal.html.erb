<div class="modal fade" id="form_modal">
  <%= simple_form_for @project, validate: true do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><%= "#{params[:action].titleize} Project  " %></h4>
          </div>
          <div class="modal-body">
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-inputs">
              <%= f.input :reference %>
              <%= f.input :object_project  %>
              <%= f.input :projectName  %>
              <%= f.input :projectDescription %>
              <%= f.input :secteurActivite %>
              <%= f.input :focal_point %>
              <%= f.input :project_situation %>
              <%= f.input :public_partenership%>
              <%= f.input :private_partenership%>
              <%= f.input :amount %>
              <%= f.input :procedure %>
              <%= f.input :contratDuration %>
              <%= f.input :duration, order: [:day, :month, :year], as: :string, input_html:{ class: "datepicker"} %>
              <%= f.association :user,:label_method => lambda{ |user| "#{user.lName} #{user.fName}" } %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.button :submit, class: 'submit btn btn-success btn-xs round' %>
          </div>
        </div>
      </div>
  <% end %>
</div>
