<div class="modal fade" id="form_modal">
  <%= simple_form_for @archive_entry_courier, validate: true do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><%= "#{params[:action].titleize} Archivage d'un Courrier Entrant" %></h4>
          </div>
          <div class="modal-body">
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :description %>
              <%= f.input :name %>
              <%= f.input :reference %>
              <%= f.input :file, input_html: { multiple: 'multiple' } %>
              <%= f.association :entry_courier, :label_method => lambda{ |entry_courier| "#{entry_courier.orderNumber}"} %>
              <%= f.association :user,:label_method => lambda{ |user| "#{user.lName} #{user.fName}" } %>
            </div>

          </div>
          <div class="modal-footer">
            <%= f.button :submit, class: 'submit btn btn-success btn-xs round' %>
          </div>
        </div>
      </div>
  <% end %>
</div>
