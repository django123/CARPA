<p id="notice"><%= notice %></p>

<h1>Archive des Courriers sortants</h1>

<table id="ar_couriers" class="display">

  <thead>
  <tr class="success">
    <th>Description</th>
    <th>Nom</th>
    <th>Référence</th>
    <th>Fichier</th>
    <th>Utilisateur</th>
    <th>Courrier sortant</th>
   <!-- <th colspan="2"></th>-->
  </tr>
  </thead>

  <tbody>
    <% @archive_release_couriers.each do |archive_release_courier| %>
      <tr>
        <td><%= link_to archive_release_courier.description, archive_release_courier %></td>
        <td><%= link_to archive_release_courier.name, archive_release_courier %></td>
        <td><%= link_to archive_release_courier.reference , archive_release_courier%></td>
        <td><%= link_to archive_release_courier.file , archive_release_courier%></td>
        <td><%= link_to archive_release_courier.user.lName, archive_release_courier %></td>
        <td><%= link_to archive_release_courier.release_courier.reference, archive_release_courier %></td>
      </tr>
  <%end%>
  </tbody>
</table>

<br>
<div class="form-actions">

  <%= link_to 'Nouvelle Archivage courrier sortant', new_archive_release_courier_path, remote: true, class: 'submit btn btn-success btn-xs round' %>

</div>
