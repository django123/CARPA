<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title"><%= "#{params[:action].titleize} Archive Courrier entrant" %></h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for(@archive_release_courier) do |f| %>
    <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :description %>
          <%= f.input :name %>
          <%= f.input :reference %>
          <%= f.input :file, input_html: { multiple: 'multiple' } %>
          <%= f.association :release_courier , :label_method => lambda{ |release_courier  | "#{release_courier.reference}"} %>
          <%= f.association :user,:label_method => lambda{ |user| "#{user.lName} #{user.fName}" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-success"%>
        </div>
    <% end %>
  </div>
</div>
