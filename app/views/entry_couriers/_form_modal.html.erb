<div class="modal fade" id="form_modal">
  <%= simple_form_for @entry_courier,validate: true do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><%= "#{params[:action].titleize} Courrier Entrant" %></h4>
          </div>
          <div class="modal-body">
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :reference %>
              <%= f.input :subject %>
              <%= f.input :sender %>
              <%= f.input :receveir %>
              <%= f.input :duration, order: [:day, :month, :year] %>
              <%= f.input :sentDate, order: [:day, :month, :year] %>
              <%= f.input :orderNumber %>
              <%= f.input :file, as: :file, input_html: { multiple: 'multiple' }%>
              <%= f.association :user, :label_method => lambda{ |user| "#{user.lName} #{user.fName}" } %>
              <%= f.association :project,:label_method => lambda{ |project| "#{project.reference}"} %>


            </div>
          </div>
          <div class="modal-footer">
            <%= f.button :submit, class: 'submit btn btn-success btn-xs round' %>
          </div>
        </div>
      </div>
  <% end %>
</div>
